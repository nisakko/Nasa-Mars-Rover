<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roverContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="roverContainerTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roverContainerValueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="horizontalLineStyle">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
    </style>
</resources>